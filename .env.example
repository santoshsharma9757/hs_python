# Django Settings
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's already in .gitignore)

# Environment: 'local' or 'production'
ENVIRONMENT=local

# Secret Key - Generate a new one for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-&h1+&c8!a1a0w=4e*80trn8@^xy8ar7r+1_u8f1#%b33do1nm9

# Debug Mode - MUST be False in production!
DEBUG=True

# Allowed Hosts (comma-separated for production)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=*

# Database Configuration
# For SQLite (local development):
DATABASE_ENGINE=sqlite3

# For PostgreSQL (production):
# DATABASE_ENGINE=postgresql
# DATABASE_NAME=your_db_name
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# For MySQL (alternative):
# DATABASE_ENGINE=mysql
# DATABASE_NAME=your_db_name
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_HOST=localhost
# DATABASE_PORT=3306

# Image Storage Configuration
# Storage Type: 'local' or 'cloud' (AWS S3, Cloudinary, etc.)
STORAGE_TYPE=local

# For Local Storage (default):
# MEDIA_ROOT will be set automatically

# For AWS S3 (production):
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your_bucket_name.s3.amazonaws.com

# For Cloudinary (production - easier alternative):
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
